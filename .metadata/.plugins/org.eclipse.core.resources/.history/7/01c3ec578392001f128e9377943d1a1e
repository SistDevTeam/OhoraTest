public class Ex07_02 {

	public static void main(String[] args) {

		int n = 11;

		if (n%2==1) {
			System.out.println("짝수(even number)");
		} else { // 짝수 조건 외의 경우 
			System.out.println("홀수(odd number)");
		}  

	} // main

} // class
