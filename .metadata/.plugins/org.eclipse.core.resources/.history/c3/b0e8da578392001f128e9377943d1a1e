package days02;

/**
 * @author jyoon
 * @date 2024. 7. 2. - 오전 11:03:31
 * @subject
 * @content
 *
 */

public class Ex02 {
	
	public static void main(String[] args) {
		// 자바 문자열 "" 쌍따옴표
		// 자바 한 문자 '' 홑따옴표
		
		// 본인의 이름을 저장할 [변수 선언 형식] (메모리 크기, 무엇을 넣을지. 기억공간의 이름까지 결정되어야 함)
		// 타입(자료형)     변수명  [= 초기값]; (세미콜론)
		// 타입(자료형)     name [= 초기값]; (세미콜론)
		// String(문자열) name [= 초기값]; (세미콜론)
		// 자바 식별자 (개발자가 이름을 부여하는 것을 식별자라고 한다.)
		// 의미가 부여되어 있는 것을 예약어(키워드)라고 한다.
		

		String name = "전재윤"; // = (대입 연산자) 는 우측에 있는 값 좌측 기억 공간에 대입한다라는 뜻이다.
		// 지역변수는 반드시 초기화해야지 사용할 수 있다. 변수를 선언하고 값을 할당하는 작업을 초기화라고 한다.
		// 값이 초기화 될때 메모리가 잡히는 것이다.
		System.out.println(name);
		
		name = "전재준"; //메모리 하나로 다른 값 할당하면서 출력 
		System.out.println(name);
		
		
		
		// [변수(변하는 수)와 상수(변하지 않는 고정된 수)]
		// 개발자가 이름을 부여하는 것을 식별자라고 한다.
		
	}

}





