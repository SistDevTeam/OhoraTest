package days08;

/**
 * @author jyoon
 * @date 2024. 7. 10. - 오후 5:07:54
 * @subject 
 * @content 메서드 호출
 *				   매개변수 + 메서드 호출 방법
 *					1) call By Name (매개변수가 없이 메소드 이름만으로 호출)
 *					2) call By Value 
 *					3) call By Reference 
 *
 *					X 4) call By Pointer (자바는 없음)
 *
 */

public class Ex05_02 {

	public static void main(String[] args) {

		int x = 10, y = 20;
		System.out.printf("> 1. main  x=%d, y=%d\n", x, y);
		/*
		int temp = x;
		x = y;
		y = temp;
		*/
		swap(x,y); // 3. 
		System.out.printf("> 2. main  x=%d, y=%d\n", x, y);


	} // main

	private static void swap(int x, int y) {
		int temp = x;
		x = y;
		y = temp;
		
	}

} // class
