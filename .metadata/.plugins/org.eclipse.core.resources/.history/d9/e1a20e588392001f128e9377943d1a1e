package days22;

import java.io.File;
import java.io.FilenameFilter;

public class Ex02_02_02 {

	public static void main(String[] args) {

		String pathname = ".\\src\\days21";
		// [문제 풀이 2] days21 폴더 안에서 자바파일( .java)만 조회
		File file = new File(pathname);

		
		/*
