package days22;

import java.io.File;
import java.io.IOException;

/**
 * @author 		jyoon
 * @date 			2024. 7. 30. - 오전 9:01:16
 * @content 	자바 IO
 * @subject 	팀 프로젝트 진행                     
 *                     화/수/목 + 금(발표)/오라클(Oracle)
 *						  (람다와 스트림)
 */

public class Ex01 {

	public static void main(String[] args) throws IOException {
		/*
		 [File 클래스]
		   ㄴ 파일과 디렉토리를 관리하는 기능들이 구현된 파일 클래스이다.
		 */

		String pathname = ".\\src\\days21\\Ex01.java";
		// String pathname = "C:\\Class\\Workspace\\JavaClass\\javaPro\\.\\src\\days21\\Ex01.java";
		// String pathname = ".\\src\\days21\\Ex01Copy.java";
		File file = new File(pathname);

		System.out.println(file.getParent()); // 	.\src\days21
		System.out.println(file.getName()); // 	  Ex01.java
		System.out.println(file.getPath()); // 	   .\src\days21\Ex01.java

		System.out.println(file.getAbsolutePath()); // 	.\src\days21
		// 절대 경로 C:\Class\Workspace\JavaClass\javaPro\.\src\days21\Ex01.java

		System.out.println(file.getCanonicalPath()); // 	  Ex01.java
		// 표준 경로 C:\Class\Workspace\JavaClass\javaPro\src\days21\Ex01.java

		System.out.println(file.isFile());				// true
		System.out.println(file.isDirectory());	// false
		System.out.println(file.length()); 			// byte
		System.out.println(file.exists());			// true 파일 존재 유무

		System.out.println(file.pathSeparator); // 
		// OS에서 사용하는 경로 구분자

		System.out.println(file.separator); // 
		// OS에서 사용하는 이름 구분자

		// Ex01.java
		String fileName = file.getName();
		// 확장자
		String ext;
		// 확장자를 제외한 파일명
		String name; // 어제꺼로 채워 넣기
		
		
		
		
		



	} // main

} // class
