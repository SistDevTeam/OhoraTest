package days08;

import java.util.Random;

public class Ex01 {

	public static void main(String[] args) {
		// [로또 6/45 게임]
		// 1~ 45
		// 1 <= (int) (Math.random()*45)+1 < 46

		// Random rnd = new Random();
		// rnd.nextInt(45)+1;

		int lottoNumber;

		int [] lotto = new int[6];


		/*
		for (int i = 1; i <= 6; i++) {
			lottoNumber = (int) (Math.random()*45)+1;
			System.out.printf("[%d]",lottoNumber);
		}
		System.out.println();
		 */
		fillLotto(lotto);

		dispLotto(lotto);



	} // main

	//                   3(중복체크 [0], [1], [2] 중복이면 다시 돌려야함)
	//                   ↓
	// [21][29][10][0][0][0]
	//중복체크 함수 만들어보기

	private static void fillLotto(int[] lotto) {
		int lottoNumber;
		lotto[0] = (int) (Math.random()*45)+1;
		System.out.println(lotto[0]);
		
		// [30][0][0][0][0][0]
		//        ↑
		int index = 1;
		boolean isDuplicate = false;
		while (index <= 5) {
			isDuplicate = false; // 다시 초기화해주는 작업이 있어야 한다.
			lottoNumber= (int) (Math.random()*45)+1;
			System.out.println(lottoNumber);
			
			// 중복체크를 한 후에 중복되지 X  위치에 넣고 1증가 시키는 코딩을 필요
			for (int i = 0; i < index; i++) {
				if (lotto[i]==lottoNumber) {
					isDuplicate = true;
					break;
					
				}
				
			}
			
			if(! isDuplicate) lotto[index++] = lottoNumber;
			
		}// 중복된 데이터가 왔을때 무한 루프가 생김

		/* 다 채우고 빠져나올 때까지니까 while문 사용
		for (int i = 0; i < lotto.length; i++) {
			lottoNumber = (int) (Math.random()*45)+1;
			lotto[i] = lottoNumber;
		}
		 */
	}


	// [기억] 배열은 초기화 하지 않아도 그 자료의 기본 값으로 초기화 되어 있다. 
	//int(정수계열) = 0; char = null, boolean = false, class = null, double = 0.01

	private static void dispLotto(int[] lotto) {
		for (int i = 0; i < lotto.length; i++) {
			System.out.printf("[%d]",lotto[i]);
		}
		System.out.println();

	} // main

} // class



