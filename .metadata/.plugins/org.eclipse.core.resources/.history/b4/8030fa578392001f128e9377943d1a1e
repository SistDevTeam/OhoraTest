package days12;

/**
 * @author jyoon
 * @date 2024. 7. 16. - 오후 2:51:32
 * @content [객체(클래스) 복사와 객체(클래스) 복제]
 * @subject                    copy                  clone    
 *                        
 *
 */

public class Ex06 {
	
	public static void main(String[] args) {
		//
		Tv t1= new Tv();
		t1.color = "red";
		System.out.println(t1.color); // red
		
		// 객체 복사 (Copy)
		Tv t2 = t1; // t1의 주소를 복사하였기 때문에 같은 인스턴스를 참조한다.
		t2.color = "blue";
		System.out.println(t1.color); // blue
		
		tvTest(t1);
		System.out.println(t1.color); // Green
		
		// 이해를 돕기위한 예제
		int [] m = {1,2,3};
		mTest(m);
		System.out.println(m[1]);
		
	} // main

	private static void mTest(int[] m) {
		m[1] =1000;
		
	}

	private static void tvTest(Tv t) { // Tv t = t1 객체 복사, 이름은 상관 없고 주소값과 인스턴스가 가장 중요하다.
		t.color = "Green";
		
	}

} // class
