package days03;

/**
 * @author jyoon
 * @date 2024. 7. 3. - 오후 12:15:26
 * @subject
 * @content
 *
 */

public class Ex03 {
	
	public static void main(String[] args) {
		
		int i = 10;
		
		System.out.println(Integer.toBinaryString(i)); // 인티저를 넣으면 2진 스트링을 돌려준다. "1010" 스트링 형식의 숫자로 출력
		System.out.println(Integer.toOctalString(i)); // 인티저를 넣으면 8진 스트링을 돌려준다. "1010" 스트링 형식의 숫자로 출력됨
		System.out.println(Integer.toHexString(i)); // 인티저를 넣으면 16진 스트링을 돌려준다. "1010" 스트링 형식의 숫자로 출력됨
		
		
		
		/* 내일 시험 문제임
		// 10진수, 8진수, 16진수 값으로 출력하기를 원함
		
		System.out.printf("%d \n", i);
		System.out.printf("%#o \n", i); //#(flags) 쓰면 자동으로 0이 붙은 8진수로 출력됨
		System.out.printf("%#x \n", i); //#쓰면 자동으로 0x가 붙은 16진수로 출력됨
		
		int money = 23535790; //금액이다 보니 3자리마다 콤마 찍기를 원함
		System.out.printf("%d \n", money); //,콤마 flag를 쓰면 3자리마다 자동으로 콤마가 찍힘
		*/
		
		
		
		
		
	}

}
