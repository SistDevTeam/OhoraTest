package days12;

/**
 * @author jyoon
 * @date 2024. 7. 16. - 오후 3:19:45
 * @content 	얕은 복제
 * @subject  	깊은 복제                     
 *                        
 *
 */

public class Ex06_02 {

	public static void main(String[] args) {
		// 객체(클래스) 복제(Clone)
		Point p1 = new Point();
		p1.x=10;
		p1.y=20;

		p1.m= new int[3];
		p1.m[0] = 1;
		p1.m[1] = 2;

		p1.dispPoint(); // > x=10, y=20

		// 객체 복사
		Point p2 = p1;
		p2.dispPoint(); // > x=10, y=20

		// 객체 복제
		Point p3 = new Point(); // 다른 인스턴스가 또 생김
		p3.x = p1.x;
		p3.y = p1.y;
		
		// 얕은 복제
		p3.m = p1.m; // 위 배열은 p3와 p1이 모두 참조하고 있다. 
		
		// 깊은 복제
		p3.m = new int[2]; 
		p3.m[0] = p1.m[0];
		p3.m[1] = p1.m[1]; // 배열마저도 자기껄로 새로 잡는것

		p3.dispPoint();





	} // main

} // class
