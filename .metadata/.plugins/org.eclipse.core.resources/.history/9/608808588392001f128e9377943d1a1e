package days19;

import java.util.ArrayList;
import java.util.HashSet;
import java.util.Iterator;

public class Ex10 {

	public static void main(String[] args) {

		ArrayList<Integer> a = new ArrayList<Integer>();
		//a.add(new Integer(1)); // 원래는 저렇게 줘야하지만
		a.add(1);
		a.add(2); // 오토 박싱, 오토 언박싱이 되므로 이렇게만 써도 됨
		a.add(3);
		a.add(4);
		a.add(5);

		ArrayList<Integer> b = new ArrayList<>();
		b.add(4);
		b.add(5);
		b.add(6);
		b.add(7);
		b.add(8);  

		/*합집합 로직
		ArrayList<Integer> hab = new ArrayList<>(a);
	      // hab.addAll(a);               // 1,2,3,4,5
	      Iterator<Integer> ir = b.iterator();
	      while (ir.hasNext()) {
	         Integer i =  ir.next();
	         if( !a.contains(i) ) hab.add(i);
	      } 
	      System.out.println( hab);
		 */


		/* 차집합 로직
	      ArrayList<Integer> cha = new ArrayList<>(a); 
	      Iterator<Integer> ir = b.iterator();
	      while (ir.hasNext()) {
	         Integer i =  ir.next();
	         if( a.contains(i) ) cha.remove(i);
	      } 
	      System.out.println( cha);
		 */



		// 1) a U b  합집합 [1, 2, 3, 4, 5, 6, 7, 8]
		HashSet<Integer> hab = new HashSet<Integer>();
		hab.addAll(b);
		System.out.println(hab);

		// 2) a - b  차집합 [1, 2, 3]
		a.removeAll(b);
		System.out.println(a);

		// 3) a ∩ b  교집합 [4, 5]// 1) a U b  합집합 [1, 2, 3, 4, 5, 6, 7, 8]
		ArrayList<Integer> kyo = new ArrayList<>();
		Iterator<Integer> ir = b.iterator();
		while (ir.hasNext()) {
			Integer i =  ir.next();
			if( a.contains(i) ) kyo.add(i);
		}
		System.out.println( kyo);

		// 2) a - b  차집합 [1, 2, 3]


		// 3) a ∩ b  교집합 [4, 5]




	} // main

} // class
