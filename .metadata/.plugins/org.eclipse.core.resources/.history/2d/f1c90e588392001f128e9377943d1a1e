package days22;

import java.io.File;
import java.io.IOException;


public class Ex02_04 {

	public static void main(String[] args) throws IOException {

		String parent = ".\\src\\days22";

		// days22 폴더 안에 upload 폴더의 유무를 확인한 후
		// 없을 경우에 폴더를 생성

		File uploadDir = new File(parent, "upload");
		// System.out.println(uploadDir.exists());

		if (!uploadDir.exists()) {
			// days 22	//upload // temp
			// uploadDir.mkdir();
			// uploadDir.mkdirs();
			System.out.println(uploadDir.mkdir());
		} else {
			// upload 폴더 삭제
			System.out.println(uploadDir.delete());  // 즉시 삭제
			// ploadDir.delete();
			// uploadDir.deleteOnExit(); // 당장 삭제가 아니라 실행 프로그램이 종료될 때 파일이 삭제된다.
		}







	} // main

} // class
