package days13;

public class Point {

	// field
	public int x;
	public int y;


	public Point(int x, int y) {
		this.x = x;
		this.y=y;
	}


	public Point() {

	}
	
	// p1.plusPoint(100)
	public Point plusPoint(int temp) {
		Point p = new Point ( this.x + temp, this.y + temp ); // this는 p1에 있는거로 출력된다.
		thisTest(this); // 매개변수로 사용되는 this의 3번째 용도
		return this; // 리턴 값으로 사용되는  this의 3번째 용도 10, 20 나옴
		//retrun p; 110 120 나옴
	}
	
	
	private void thisTest(Point p) {
		p.dispPoint();
		
	}


	@Override
	public String toString() {
		return "Point [x=" + x + ", y=" + y + "]";
	}


	// method
	// p1.dispPoint(); this [p1 주소]
	// p2.dispPoint(); this [p2 주소]
	public void dispPoint() {
		System.out.printf("> x=%d, y=%d\n",this.x, this.y);
	} // disPoint


	//
	// p1.plusPoint (Point p) {
	// }

	public void plusPoint(Point p) {
		x = x + p.x;
		y = y + p.y;

	}

	
	//p1.plusPoint(p1, p2) 호출
	public Point plusPoint(Point p1, Point p2) {
		int x = p1.x + p2.x;
		int y = p1.y + p2.y;

		Point p = new Point();
		p.x = x;
		p.y = y;
		return p;

	}


} // class
