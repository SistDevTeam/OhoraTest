package days03;

/**
 * @author jyoon
 * @date 2024. 7. 3. - 오후 12:42:36
 * @subject 타입(형) 변환
 * @content 1) 자동 형 변환  
 * 							더 큰 자료형 = 작은 자료형의 값을을 더 큰 자료형에 대입 (19~20라인)
 * 
 * 				   2) 강제 형 변환
 * 
 * 
 */

public class Ex03_03 {
	
	public static void main(String[] args) {
		
		// ***** flag 오늘한거 #샵 ,콤마 0영
		
		int no = 15;
		System.out.printf("%d\n",no);
		System.out.printf("%04d\n",no); //4자리 확보 하는데 0으로 나머지를 채움
		System.out.printf("%4d\n",no); //4자리 확보 하고 우측정렬 d앞에 width임
		System.out.printf("%-4d\n",no); // 4자리 확보하고 좌측정렬
		System.out.println( "-".repeat(20) ); // 구분선 긋겠다.
		
		String name = "홍길동";
		System.out.printf("[%10s]\n", name); // 대괄호 하면 10칸 너비 7칸 확보하고 우측 정렬됨
		System.out.printf("[%-10s]\n", name); // 왼쪽 정렬
		
		
		
		// 3.14 => double로 인식
		// float pi = 3.14;//double 값을 플롯에 넣으면 안됨, 큰걸 작은 형에 넣을 순 없다 
		// float pi = (float)3.14; 강제 형 변환으로 가능하게 만듬 1번
		// float pi = 3.14F; 강제 형 변환 2번
		 
		int i = 100; //[][][][]
		// 자동 형 변환 1번째 경우
		long l = i;   //[][][][][][][][] //타입이 일치하지 않음 l = i라고 했는데 오류가 안남. 자동으로 i가 l로 바뀐거임
		//좌측의 자료형이 더 크다면 우측 값이 좌측으로 대입될때 자동으로 형변환이 일어난다.
		
		// 자동 형 변환 2번째 경우
		long k = l + i ; // 타입이 다름 근데 오류는 안남 // 큰 자료형 + 작은 자료형 => 큰자료형
		
		//i = 100L; // 이건 자동 형변환이 안됨 우측이 더 작으니까
		// 나는 꼭 넣고 싶다? 이땐 강제 형변환이 필요한 것이다.
		//i = 100L; 이거에 마우스 넣고 가장 위에꺼 누르면 변환 됨
		
		// 자동 형 변환X
		// 강제 형 변환 (변환하고자 하는 타입) cast 연산자
		// cast 강제 형 변환
		i = (int) 100L;
		
		// 3 + 5 * 2 == 13
		//          1
		//    2
		//만약 3+5 먼저 하고 싶으면
		
		// 이건 같은 기호이지만 () 최우선 연산자라고 부름다. 강제 형변환 연산자가 아님
		// (3 + 5) * 2 == 16
		
		
		
	}
}
