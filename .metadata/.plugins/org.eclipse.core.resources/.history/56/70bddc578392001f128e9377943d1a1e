package days03;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

/**
 * @author jyoon
 * @date 2024. 7. 3. - 오전 10:51:29
 * @subject [S]canner 클래스 == 물건, 객체, 개체
 * @content
 *
 */

public class Ex02_02 {
	
	public static void main(String[] args) throws IOException {
		
		BufferedReader bufferedReader = new BufferedReader(new 
InputStreamReader(System.in));
		
		String name;
		byte age = 20;
		
		System.out.print("> 이름을 입력: ");
		name = bufferedReader.readLine(); // 복사해오니 br이라는 변수명이랑 달라져서
		//bufferedReader로 써야함 String 위에 있으니까 지우고 name = 만
		
		System.out.print("> 나이를 입력: ");
		// Type mismatch: cannot convert from String to byte
		// 형변환이 필요함 타입이 안맞음
		//타입(형) 변환
		// "20" -> 20
		// String -> byte 기본형 바이트, Byte는 클래스 Byte.parseByte()
		// String -> int Integer Integer.parseInt()
		// String -> short Integer Integer.parseShort()
		// String -> long Integer Integer.parseLong()
//		String strAge = bufferedReader.readLine(); // "20"
//		age = Byte.parseByte(strAge);
		
		//굳이 두줄 코딩 하지 않고
		age = Byte.parseByte(bufferedReader.readLine());
		
		//문제점 : 나이를 입력이 잘못되면 NumberFormatException
		
		System.out.printf("이름=\"%s\", 나이=%d" ,name, age);
		
	}

}
