package days20;

import java.util.ArrayList;
import java.util.Collections;

/**
 * @author jyoon
 * @date 2024. 7. 26. - 오전 11:49:55
 * @content 
 * @subject                       
 *                        
 *
 */

public class Ex04 {
	
	public static void main(String[] args) {
		
		// Arrays 클래스 : 배열을 사용하기 쉽도록 기능(메서드)이 구현된 클래스
		int [] m = {3,5,2,4,1}; 
		// Arrays.sort(m); asc 오름차순 정렬
		// Arrays.binarySearch(m, 5); 이진검색
		// Arrays.toString(m);
		// Arrays.fill(m, -1); // 배열 요소를 -1로 모두 채우고 싶다.
		// System.out.println(Arrays.toString(m));
		
		// Collection 클래스 : 컬렉션을 사용하기 쉽도록 기능(메서드)이 구현된 클래스
		// Collections.reverseOrder();
		ArrayList<Integer>list = new ArrayList<Integer>();
//		list.add(3);
//		list.add(5);
//		list.add(2);
//		list.add(4);	
//		list.add(1);
		
		Collections.addAll(list, 3,5,2,4,1);
		System.out.println(list);
		// Collections.rotate(list, 2); // 오른쪽으로 2칸씩 회전 시킴 [4, 1, 3, 5, 2]
		Collections.rotate(list, 2);
		System.out.println(list);
		//Collections.rotate(list, -2); // 왼쪽으로 2칸씩 회전 시킴 [3, 5, 2, 4, 1]
		//System.out.println(list);
		Collections.swap(list, 0 , 3);
		System.out.println(list);
		
		Collections.shuffle(list); // 섞는 작업, 임의의 자리 변경
		System.out.println(list);
		
		// Collections.sort(list); // 오름차순 정렬
		
		//Collections.sort(list, (a,b)->b-a); // 내림차순 정렬
		Collections.sort(list, Collections.reverseOrder());  // 내림차순 정렬
		System.out.println(list);
		
		Collections.fill(list, -1); 
		System.out.println(list);
		
		
	} // main

} // class
