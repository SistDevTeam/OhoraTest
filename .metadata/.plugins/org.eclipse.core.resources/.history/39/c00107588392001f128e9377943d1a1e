		// 배열명[3]
		// list.clear(); 모든 요소(element)를 삭제
		// System.out.println(list);
		list.set(1,"전재윤");
		System.out.println(list);

		System.out.println(list.get(3));

		// 원충희를 찾아서 삭제...
		int index = list.indexOf("원충희");
		// list.remove(index); // 삭제된 개체를 return
		// list.remove("원충희"); // 삭제되는 방법 다양
		// <E> Element
		// <T> Type



