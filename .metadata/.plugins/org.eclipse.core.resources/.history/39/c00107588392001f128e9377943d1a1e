		// <E> 제네릭 클래스 Element == 요소
		// ArrayList list = new ArrayList(10); // 아무것도 안주면 초기 용량은 10개이다.
		ArrayList list = new ArrayList();
		System.out.println(list.size()); // size == 요소의 수 아직 한개도 없다는 뜻
		list.add("이시훈");
		list.add("원충희");
		list.add("송세호");

		System.out.println(list.toString());
		System.out.println(list);
		System.out.println(list.size());
		list.add("전재윤");
		System.out.println(list); // 크기가 자동으로 증가함

		System.out.println(list.contains("원충희"));

		list.add("원충희");

		System.out.println(list.indexOf("원충희"));
		System.out.println(list.lastIndexOf("원충희"));

