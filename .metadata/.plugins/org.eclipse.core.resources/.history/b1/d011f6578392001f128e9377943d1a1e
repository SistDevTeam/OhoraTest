public class Ex03_04 {

	public static void main(String[] args) {
		// [문제]
		// 거듭제곱 == 누승 == 멱 == pow
		// 2^3 == 밑수 (2)를 지수 (3)만큼 반복해서 곱하는 것.
		// 2^3 == 2x2x2

		// int result = pow(2,3);
		double  result = pow(2,-3); // 2의 -3승 분의 1

		System.out.println(result);


	} // main

	private static double pow(int i, int j) {

		// 밑수 i 곱하는 값
		// 지수 j 곱하는 횟수
		// result 곱해진 결과 값

		double result = 1;
		int exp = j < 0 ? -j : j;
		for (int k = 0; k < exp; k++) {
			result *= i;
		}

		return j>0?result:1/result;
	}

	private static int recursivePower(int i, int j) {



		return 0;
	}

} // class
