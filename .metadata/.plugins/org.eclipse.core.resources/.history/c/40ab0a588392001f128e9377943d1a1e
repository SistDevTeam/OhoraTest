package days20;

import java.io.FileOutputStream;
import java.util.Properties;

/**
 * @author jyoon
 * @date 2024. 7. 26. - 오전 11:12:54
 * @content Properties 컬렉션 클래스 예제 (XML로 써보기)
 * @subject 1. key(Store) value(String) = Map
 *					2. 환경설정값을 쓰기/ 읽기
 *					3. setProperty(), getProperty() => p
 *					4. 파일(.properties) 저장
 *						p. store(FileWriter, 주석문) 
 *						p. storeToXML(FileOutputStream, 주석문)
 *
 */

public class Ex03_02 {

    public static void main(String[] args) {
        // 예) DBMS(오라클) + Java 연동 ( DB 연결 설정 정보 ) 
        String className = "oracle.jdbc.driver.OracleDriver";            
        String url = "jdbc:oracle:thin:@localhost:1521:xe";                  
        String user = "scott";                                                                   
        String password = "tiger";   

        Properties p = new Properties();
        p.setProperty("className", className);
        p.setProperty("url", url);
        p.setProperty("user" , user);
        p.setProperty("password", password);

        String fileName = ".\\src\\days20\\jdbcConfig.xml"; // changed to XML file extension
        // 지금까지 파일 읽을 땐 FileReader, BufferedReader
        // FileWriter
        try (FileOutputStream outputStream = new FileOutputStream(fileName)) {
            p.storeToXML(outputStream, "jdbc config sample.");
            System.out.println(" SAVE END ");
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

} // class
