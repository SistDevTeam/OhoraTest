package days12;

public class Tv {
	
	// "".length() 메서드
	// m.length 필드
	
	// 멤버(구성요소)
	// 		ㄴ 멤버변수(필드)
	// 			ㄴ [접][기] 자료형 필드명 [= 초기값];
	// 지역변수는 초기화하지 않으면 사용할 수 없다.
	// 멤버변수는 초기화하지 않아도 기본 값으로 들어간다. 불린의 경우 false가 기본
	public boolean power;
	public int channel = 1;
	public String color = null;
	
	// 멤버함수==메서드(method)==동작(기능)
	public void power() {
			power = !power; // 티비가 꺼져 있으면 켜지고 꺼져 있으면 켜지는 함수
	}
	
	public void channelUp() {
		channel++;
	}
	
	public void channelDown() {
		channel--;
	}
	
	
	
}
