package days07;

public class Exam07 {
	public static void main(String[] args) {
		
		int first = 1;
		int second = 2;
		int next;
		int sum = first + second;
		
		while ((next = first + second) <=100) {
			next = first +second;
			System.out.println(next);
			sum+=next;
			first = second;
			second = next;
			
			
		}
	
	System.out.printf("%d\n",sum);
	}

}
