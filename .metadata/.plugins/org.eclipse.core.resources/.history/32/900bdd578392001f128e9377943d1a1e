// 전체 코딩 통으로 시험봄

public class Ex03_02 {
	
	
	public static void main(String[] args) throws NumberFormatException, IOException {
		
		// 정상적으로 되는 이유는??
		// int i = 2147483647; // 인티저로 표현 가능한 가장 큰 값
		int i = Integer.MAX_VALUE; //이거 파이널 상수임
		int j = 100;
		
		long k = (long)i + j; // 강제 형 변환 (좌측 값 만약에 int면 오류남 좌측이 더 작으니까)
		//2147483647 + 100 = -2147483549 //상수 오버플로우 발생, 작으면 언더플로우 발생 //오류가 안떨어져서 디버깅하기 까다로움
		System.out.printf("%d + %d = %d\n", i, j, k);
		
		
		
		
		
		
		/* 전체 통암기
		 * 
		 * 
		// 2. 문제 제시
		//String 이름
		//byte 국어, 영어, 수학   (입력 받을 거임 Buffer더 리더 객체)
		//short 총점, double평균 계산
		//[출력형식] 홍길동 90 89 91 총점 270 평균 90.00
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		String name;
		byte kor, eng, mat; //바이트는 127까지 100점이니까
		short tot; // 3과목 합쳐서 0점 가장큰 값은 300점이니까
		double avg; 
		
		System.out.print("> 이름을 입력: ");
		name = br.readLine();
		
		System.out.print("> 국어를 입력: ");
		kor = Byte.parseByte(br.readLine());
		
		System.out.print("> 영어를 입력: ");
		eng = Byte.parseByte(br.readLine());
		
		System.out.print("> 수학를 입력: ");
		mat = Byte.parseByte(br.readLine());
		
		// Type mismatch: cannot convert from int to short 형이 안맞음 
		tot = (short)(kor + eng + mat);   // + 덧셈 연산자 // 강제 형변환 연산자 + 최우선 연산자
		avg = (double)tot / 3;               // / 나눗셈 연산자 // 강제 형변환은 변수에 붙이는걸 선호하고 단 3.0과목 이런식으로 하면 안됨
		
		System.out.printf("%s\t %d\t %d\t %d\t %d\t %f\n" ,name, kor, eng, mat, tot, avg);
		*/

		
		
		
	}
	
}
