package days11;

/**
 * @author jyoon
 * @date 2024. 7. 15. - 오후 5:12:25
 * @content 자바 프로그램의 기본 구조 설명
 *                        자바 클래스 선언 형식 설명
 *                        자바 메소드(함수) 선언 형식 설명
 *
 */

public class Ex06 {

	public static void main(String[] args) {

		int [][] m =new int[5][5];
		
		fillM2(m);
		// fillM(m); // 1~25까지를 배열에 채워넣는 함수
		
		dispM();

		System.out.println();
		System.out.println();
		System.out.println();
		System.out.println(); 

		for (int i = 0; i < m.length; i++) { // 행갯수
			for (int j = 0; j < m[i].length; j++) { // 열갯수
				System.out.printf("[%02d]", m[i][j]);
			} // for j
			System.out.println();
		} // for i




	} // main

	private static void fillM2(int[][] m) {
		for (int i = 0; i < m.length; i++) { // 행갯수
			for (int j = 0; j < m[i].length; j++) { // 열갯수
				 m[i][j] = 25-(i*5+j); // 00 01 02 03 04, 10 11 12 13 14, 20 21 22 23 24.....
				 
			} // for j
			System.out.println();
		} // for i
	}
	
	
	
	private static void fillM(int[][] m) {
		int count =1;
		for (int i = 0; i < m.length; i++) { // 행갯수
			for (int j = 0; j < m[i].length; j++) { // 열갯수
				 m[i][j] = m[i].length*i+j+1; // 5는 열의 갯수 = m[i].length   5*i+j=1이라는 규칙을 통해 도출해냄
			} // for j
			System.out.println();
		} // for i
		
	}

	
	
	
	private static void dispM() {
		// TODO Auto-generated method stub
		
	}

} // class
