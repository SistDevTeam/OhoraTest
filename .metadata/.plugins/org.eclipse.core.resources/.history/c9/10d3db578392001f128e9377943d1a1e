 * @subject 논리형(boolean (1) ) - ture/false
 * @content 
 *						 
 */

public class Ex05_02 {

	public static void main(String[] args) {
		
		// 남자, 여자 성별을 나타내는 변수 선언
		// true false
		//   1     0     byte short int long
		// "male" "female" String
		// 'm'    'f' char
		// 활용도를 생각하면 불린 사용
		boolean gender;
		gender = true;
		
		System.out.printf("성별 = %b\n", gender);
		// 성별 = 남자로 나오도록 출력
		
		// $[argument_index$] [flags] [width] [.precision]conversion
		
		
		int x = 10;
		System.out.printf("%1$d %1$o %1$x\n", x); //1$ 달러 사인 사용
		System.out.printf("%d\n", x); // 10진수
		System.out.printf("%o\n", x); // 8진수
		System.out.printf("%x\n", x); // 16진수
		// System.out.printf("%x %X\n", x, x); // 16진수
		System.out.printf("%1$x %1$X\n", x); // 대입으로 2개 출력
		
		
		
	}

}
