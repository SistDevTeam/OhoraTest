package days05;

import java.util.Scanner;

/**
 * @author jyoon
 * @date 2024. 7. 5. - 오후 2:51:26
 * @subject  컴퓨터 - 사용자(USER)
 * @content  [ 가위(1), 바위(2), 보(3) 게임 ]
 *           		컴퓨터는 게임을 할 때마다 임의의 수(1~3) 발생
 *           		사용자는 1~3  입력.
 *           
 *                 0 ~ 100 점수 랜덤  :
 *                 1~45 로또번호       :
 */                 

public class Ex07 {

	//    1         <=             정수                        <= 3
	// 0.0         <= double math.random()          < 1.0
	// 0.0 X 3   +1  <=(int) (Math.random() x 3)  +1    < 1.0 X 3 +1


	/*
    for (int i = 0; i < 10; i++) {
       // System.out.println( Math.random() );
       System.out.println( (int)(Math.random() * 3) + 1 );
    }
	 */





	public static void main(String[] args) {

		int com, user;

		// 컴퓨터도 선택
		com = (int)(Math.random() * 3)+1;

		//사용자 선택
		Scanner scanner = new Scanner(System.in);

		System.out.print("> user 가위(1),바위(2),보(3) 선택 ? ");
		user = scanner.nextInt();

		String strUser = "가위";
		if( user == 2 ) strUser = "바위";
		else if( user == 3) strUser ="보";

		String strCom = "가위";
		if( com == 2 ) strCom = "바위";
		else if( com == 3) strCom ="보";

		System.out.printf("사용자 : %s, 컴퓨터 : %s \n", strUser, strCom);


		/*
		 *          가위(1)   바위(2)   보(3)
		 *  가위(1) 1-1=0     2-1=1(사) 3-1=2(컴)
		 *  바위(2) 1-2=-1(컴) 2-2=0    3-2=1(사)
		 *  보(3)   1-3=-2(사) 2-3=-1(컴)  3-3=0
		 *
		 *  사람 승리 : 1 , -2
		 *  무승부    : 0
		 *  컴   승리 : 2 , -1
		 *
		 * */

		/* 1풀이 스위치문
		switch (user - com) {
		case 0:
			// 무승부
			System.out.println("무승부");
			break;
		case 1: case -2:
			// 사람 승리
			System.out.println("사용자 승리");
			break;
		default:
			// 컴퓨터 승리
			System.out.println("컴퓨터 승리");
			break;
		}
		 */


		// 2 풀이 if문

		int 판단 = user - com;

		if ((판단) == 0) {
			System.out.println("무승부");

		} else if ((판단) == 1 || (판단) == -2) {
			System.out.println("사용자 승리");

		} else {
			System.out.println("컴퓨터 승리");
		}

		// 1, 2, 3이 아닌 가위 바위 보로 나오도록

		// 값 체크 switch문, 범위 체크는 if문을 사용하자

	}

}
