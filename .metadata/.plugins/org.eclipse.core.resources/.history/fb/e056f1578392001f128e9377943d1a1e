 *						continue 라벨명;
 */

public class Ex06 {

	public static void main(String[] args) {

		//  구구단 (2단~9단)

		/*
	      int dan = 2;
	      for (int i = 1; i <= 9 ; i++) {
	         System.out.printf("%d*%d=%d\n", dan, i, dan * i);
	      }
	      dan = 3;
	      for (int i = 1; i <= 9 ; i++) {
	         System.out.printf("%d*%d=%d\n", dan, i, dan * i);
	      }
	      dan = 4;
	      for (int i = 1; i <= 9 ; i++) {
	         System.out.printf("%d*%d=%d\n", dan, i, dan * i);
	      }
	      :
	      dan = 9;
	      for (int i = 1; i <= 9 ; i++) {
	         System.out.printf("%d*%d=%d\n", dan, i, dan * i);
	      }
		 */
		EXIT: for (int dan = 2; dan <= 9; dan++) {
			//System.out.printf("[%d단]\t", dan);
			for (int i = 1; i <=9; i++) {
				//if ( i==5 ) break EXIT; //라벨을 붙인다.
				// break는 가장 가까운 제어문을 빠져나감
				if (i==5) continue EXIT;
				System.out.printf("%d*%d=%d\t",dan,i,dan*i);

			}
			System.out.println();
		}

	}

}
// 각 단의 곱하기 5를 건너뛰고 다음 단으로 이동