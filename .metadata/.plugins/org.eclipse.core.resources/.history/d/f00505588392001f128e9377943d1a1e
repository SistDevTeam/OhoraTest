public class Ex08_04 {
	
	public static void main(String[] args) {
		// 개강일로부터 지금(현재)까지 지난 일수 계산
		
		Date o = new Date(2024-1900, 7-1, 1,9,0,0);
		// System.out.println(t.toLocaleString());
		
		Date t = new Date();
		// System.out.println(t.toLocaleString());
		
		long diffMs = t.getTime() - o.getTime(); // 밀리세컨드 값을 long 형으로 받아옴
		
		System.out.println(diffMs + " millisecond");
		System.out.println(diffMs/1000 + " second");
		System.out.println(diffMs/1000/60 + " minute");
		System.out.println(diffMs/1000/60/60 + " hour");
		System.out.println(diffMs/1000/60/60/24 + " day");
		
		d_day(t, o);
		
		
	} // main

